# mise
eval "$(mise activate bash)"

# starship prompt  
eval "$(starship init bash)"

# Auto-load environment variables from ~/.env if it exists
if [ -f "$HOME/.env" ]; then
    set -a  # Export all variables
    source "$HOME/.env"
    set +a
fi

# Also load project-specific .env if in a project directory
if [ -f ".env" ] && [ "$PWD" != "$HOME" ]; then
    set -a
    source ".env"
    set +a
fi