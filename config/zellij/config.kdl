// Zellij Configuration - Optimized for Tabby Terminal
// Keybindings: Ctrl+g (default mode switch)

// Theme
theme "tokyo-night"

// UI Configuration
pane_frames false                 // Cleaner look without frames
default_layout "compact"          // Use compact layout

// Copy/paste integration
copy_command "wl-copy"           // Wayland clipboard (or "xclip -selection clipboard" for X11)
copy_on_select true              // Auto-copy selected text

// Mouse support
mouse_mode true
scroll_buffer_size 100000        // Large scrollback buffer

// Simplified mode
simplified_ui true
default_shell "bash"

// Session options
session_serialization false      // Don't auto-save layout on exit
pane_viewport_serialization false

// Keybindings - Tabby-friendly (Ctrl+g prefix)
keybinds {
    normal {
        bind "Ctrl g" { SwitchToMode "locked"; }
        bind "Ctrl q" { Quit; }
    }
    
    locked {
        bind "Ctrl g" { SwitchToMode "normal"; }
    }
}
