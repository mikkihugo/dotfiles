{
  "version": "1.0",
  "updated": "2024-01-08",
  "hosts": [
    {
      "alias": "prod-web",
      "hostname": "prod.example.com",
      "user": "deploy",
      "port": 22,
      "identity_file": "id_rsa_prod",
      "startup_command": "tmux attach -t prod || tmux new -s prod",
      "tags": ["production", "web"],
      "forward_agent": true
    },
    {
      "alias": "dev-api",
      "hostname": "10.0.1.50",
      "user": "developer",
      "port": 2222,
      "identity_file": "id_ed25519",
      "startup_command": "cd /var/www/api && tmux attach || tmux new",
      "tags": ["development", "api"],
      "proxy_jump": "bastion"
    },
    {
      "alias": "bastion",
      "hostname": "bastion.example.com",
      "user": "ubuntu",
      "port": 22,
      "identity_file": "id_rsa_bastion",
      "tags": ["infrastructure"],
      "startup_command": "tmux new-session -s bastion"
    },
    {
      "alias": "db-primary",
      "hostname": "db1.internal",
      "user": "postgres",
      "port": 22,
      "startup_command": "tmux new-session -s db",
      "tags": ["database", "production"],
      "proxy_jump": "bastion",
      "local_forward": "5432:localhost:5432"
    }
  ],
  "groups": {
    "production": ["prod-web", "db-primary"],
    "development": ["dev-api"],
    "all": ["prod-web", "dev-api", "bastion", "db-primary"]
  }
}